<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h4>Criar nova categoria:</h4>
<hr>
<div class="card">
<div class="card-body">
<form action="/admin/categorias/add" method="post">
<label for="nome">Nome:</label>
<input type="text" name="nome" class="form-control" placeholder="Digite o nome da categoria">
<label for="slug">Slug:</label>
<input type="text" name="slug" id="slug" class="form-control" placeholder="Digite o slug da categoria">
<button type="submit" class="btn btn-success mt-4">Adicionar</button>
</form>
</div>
</div>
<script>
let input = document.getElementById('slug')
input.addEventListener('input', () => {
input.value = input.value.toLowerCase().replace(/\s+/g, '-')
})
</script>